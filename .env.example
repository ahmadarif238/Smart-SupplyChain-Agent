# Database Configuration
DATABASE_URL=postgresql://supplychain_user:your_password_here@localhost:5432/supply_agent
SECRET_KEY=your-secret-key-here-change-in-production
PORT=8000

# Google Gemini API Key (Free tier: 250 RPD, 250K TPM, 1M context window)
